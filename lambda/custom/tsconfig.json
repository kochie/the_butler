{
    "compilerOptions": {
      "module": "commonjs",
      "outDir": "dist/",
      "target": "es6",
      "lib": [ "es6" ],
      "moduleResolution": "node",
    //   "rootDir": "./",
    //   "sourceMap": true,
    //   "allowJs": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "noImplicitReturns": true,
    //   "preserveConstEnums": true,
      "suppressImplicitAnyIndexErrors": true,
      "forceConsistentCasingInFileNames": true
    },
    "exclude": [ "node_modules", "build", "webpack" ],
    "include": [ "src/" ]
    // "types": [ "typePatches" ]
  }